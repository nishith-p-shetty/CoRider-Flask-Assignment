{
    "swagger": "2.0",
    "info": {
        "title": "Flask User Resource App",
        "version": "1.0.0"
    },
    "paths": {
        "/ping": {
            "get": {
                "description": "Returns message showing app is up",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/users": {
            "get": {
                "description": "Returns a list of all users.",
                "produces": [
                    "application/json"
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "post": {
                "description": "Creates a new user with the specified data.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "User Data",
                        "in": "body",
                        "description": "Details of the new user.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/user_data"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "description": "Returns the user with the specified ID.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the required user.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "put": {
                "description": "Re Updates the user with the specified ID with the new data.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the required user.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    },
                    {
                        "name": "user_data_update",
                        "in": "body",
                        "description": "Updated details of the user.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/user_data_update"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            },
            "delete": {
                "description": "Updates the user with the specified ID with the new data.",
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of the required user.",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/id"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful operation"
                    }
                }
            }
        }
    },
    "definitions": {
        "id": {
            "type": "integer",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32",
                    "example": 123
                }
            }
        },
        "user_data": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "format": "int32",
                    "example": 123
                },
                "name": {
                    "type": "string",
                    "example": "John"
                },
                "email": {
                    "type": "string",
                    "example": "john@email.com"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        },
        "user_data_update": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string",
                    "example": "John"
                },
                "email": {
                    "type": "string",
                    "example": "john@email.com"
                },
                "password": {
                    "type": "string",
                    "example": "password123"
                }
            }
        }
    }
}